{
  "name": "cdp-gdb-bridge",
  "version": "1.0.4",
  "description": "WebAssembly on Chrome cli debugger",
  "author": "kamenokonokotan",
  "publisher": "kamenokosoft",
  "repository": {
    "type": "git",
    "url": "https://github.com/nokotan/cdp-gdb-bridge"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc --module commonjs",
    "build-crate": "cd crates/dwarf && wasm-pack build --out-name index --target nodejs",
    "prepublish": "npm run build-crate && npm run build",
    "run": "node dist/cli/index.js",
    "vscode:pack": "vsce package -o dist/",
    "vscode:prepublish": "webpack --mode=production --config-name extension && webpack --mode=production --config-name dapServer"
  },
  "bin": {
    "cdp-gdb-bridge": "dist/cli/index.js"
  },
  "keywords": [
    "webassembly"
  ],
  "dependencies": {
    "chrome-launcher": "^0.14.0",
    "chrome-remote-interface": "^0.31.0",
    "vscode-debugadapter": "^1.48.0",
    "wabt": "^1.0.24"
  },
  "devDependencies": {
    "@types/chrome-remote-interface": "^0.31.2",
    "@types/node": "^16.6.1",
    "@types/vscode": "^1.59.0",
    "@wasm-tool/wasm-pack-plugin": "^1.5.0",
    "ts-loader": "^9.2.5",
    "typescript": "^4.3.5",
    "vsce": "^1.96.1",
    "webpack": "^5.52.0",
    "webpack-cli": "^4.8.0"
  },
  "activationEvents": [
    "onDebugResolve:wasm",
    "onDebugDynamicConfigurations:wasm"
  ],
  "engines": {
    "vscode": "^1.59.0"
  },
  "main": "packed/extension.js",
  "contributes": {
    "debuggers": [
      {
        "type": "wasm",
        "languages": [
          "webassembly"
        ],
        "label": "WebAssembly Debug",
        "program": "./packed/dapServer.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "url"
            ],
            "properties": {
              "url": {
                "type": "string",
                "description": "path to inspected webpage.",
                "default": "http://localhost:8080/"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "wasm",
            "request": "launch",
            "name": "Ask for url",
            "url": "${workspaceFolder}/${command:AskForProgramName}"
          }
        ],
        "configurationSnippets": [
          {
            "label": "WebAssembly Debug: Launch",
            "description": "A new configuration for 'debugging' a user selected markdown file.",
            "body": {
              "type": "wasm",
              "request": "launch",
              "name": "Ask for url",
              "url": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\""
            }
          }
        ],
        "variables": {
          "AskForProgramName": "extension.mock-debug.getProgramName"
        }
      }
    ]
  }
}
